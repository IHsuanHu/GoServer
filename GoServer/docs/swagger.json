{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/originalurl": {
            "get": {
                "description": "Retrieves a short URL if it exists, or creates a new one if it does not.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "URLs"
                ],
                "summary": "Retrieve or create a short URL",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Original URL",
                        "name": "originalUrl",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Short URL",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Original URL is required",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Failed to generate a short URL or Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/shorturl": {
            "get": {
                "description": "Retrieves the original URL from a given short URL.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "URLs"
                ],
                "summary": "Retrieve the original URL",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Short URL",
                        "name": "shortUrl",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Original URL",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Short URL is required",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "No such original URL found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}